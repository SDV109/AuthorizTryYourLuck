<?xml version="F0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">

    <TextView
        android:id="@+id/namedude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Испытай удачу, выбери цвет, а после нажми SPIN "
        android:paddingTop="30dp"
        android:textSize="25dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="129dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="14dp"
        android:text=" SPIN"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_wheel"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_above="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="41dp"
        android:scaleType="centerInside"
        app2:srcCompat="@drawable/wheel" />

    <ImageView
        android:id="@+id/iv_pointer"
        android:layout_width="98dp"
        android:layout_height="197dp"
        android:layout_alignStart="@+id/iv_wheel"
        android:layout_alignLeft="@+id/iv_wheel"
        android:layout_alignTop="@+id/iv_wheel"
        android:layout_alignEnd="@+id/iv_wheel"
        android:layout_alignRight="@+id/iv_wheel"
        android:layout_alignBottom="@+id/iv_wheel"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="129dp"
        app2:srcCompat="@drawable/pointer" />

    <RadioGroup
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="246dp"
        android:layout_marginRight="246dp"
        android:layout_marginBottom="502dp">

        <RadioButton
            android:id="@+id/rb_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Красное" />

        <RadioButton
            android:id="@+id/rb_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Черное" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView"
        android:layout_width="230dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/button"
        android:layout_toLeftOf="@+id/button"
        android:textSize="24sp" />

    <Button
        android:id="@+id/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="461dp"
        android:onClick="onClick"
        android:text="статистика" />

</RelativeLayout>